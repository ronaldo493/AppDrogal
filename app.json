{
  "expo": {
    "name": "Suporte Drogal",
    "slug": "AppDrogal",
    "version": "1.0.2",
    "runtimeVersion": {
      "policy": "fingerprint"
    },
    "icon": "./assets/img/LogoApp2.png",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/img/LogoApp2.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "config": {
        "googleMapsApiKey": "AIzaSyCdWLfccDPylQ5I1peF-wC0vm9uNKZ-PWY"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Este aplicativo precisa acessar sua localização para mostrar as lojas próximas a você.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Este aplicativo precisa acessar sua localização para mostrar as lojas próximas a você.",
        "NSCameraUsageDescription": "Este aplicativo precisa acessar sua câmera para ler códigos de barras e QR codes.",
        "UIBackgroundModes": ["fetch"] 
      },
      "bundleIdentifier": "com.ronaldo2024.SuporteDrogal"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "package": "com.ronaldo2024.SuporteDrogal",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK",
        "ACCESS_BACKGROUND_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyCdWLfccDPylQ5I1peF-wC0vm9uNKZ-PWY"
        }
      }
    },
    "plugins": [
      "expo-font",
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          },
          "ios": {
            "deploymentTarget": "13.4"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera"
        }
      ],
      "expo-background-fetch",
      "expo-task-manager"
    ],
    "web": {},
    "extra": {
      "eas": {
        "projectId": "65b71262-be2b-4089-b712-c13c03acc42e"
      }
    },
    "owner": "ronaldo2024"
  }
}